{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./*.js",
    "./*.ts",
    "test/**/*.ts"
  ]
}
